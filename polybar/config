[colors]
bg          = ${xrdb:color0}
fg          = ${xrdb:color7}
inactive-bg = #2f343f
inactive-fg = #676E7D
urgent      = #E53935
arc-blue    = ${xrdb:color2}


[template/bar]
enable-ipc = true
width = 100%
height = 27

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 0
border-bottom-color = ${colors.inactive-bg}

overline-size = 0
overline-color = ${self.background}
underline-size = 1
underline-color = ${self.background}

padding-left = 0
padding-right = 0
module-margin-left = 3
module-margin-right = 3

font-0 = "DejaVu Sans:size=8;2"
font-1 = "FontAwesome:size=10;0"
wm-restack = i3
tray-position = 

[bar/right]
inherit = template/bar
monitor = DVI-D-0
modules-left = spotify
modules-center = i3
modules-right = openweathermap-simple volume keyboard clock

[bar/left]
inherit = template/bar
monitor = HDMI-0
modules-left = wired-network spotify
modules-center = i3 memory cpu
modules-right = openweathermap-simple volume keyboard clock

[bar/laptop]
inherit = template/bar
monitor = eDP-1
modules-left = network wired-network 
modules-center = cpu i3 memory
modules-right = bat0 bat1 pulseaudio clock

[module/openweathermap-simple]
type = custom/script
exec = ~/.scripts/openweathermap-simple.sh
interval = 600
label-font = 3

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = 
format-prefix-foreground = ${colors.inactive-fg}
exec = ~/.scripts/printmail.sh

[module/mxbattery]
type = custom/script
interval = 60
format = <label>
format-foreground = ${colors.fg}
exec = ~/.scripts/mxbattery.sh

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

[module/eth]
type = custom/script
interval = 60
format = €<label>
format-foreground = ${colors.inactive-fg}
exec = ~/.scripts/ethBalance.sh

[module/xbacklight]
type = internal/xbacklight
output = eDP-1
format = <ramp> <bar>

ramp-0 = 
ramp-0-foreground = ${colors.inactive-bg}
ramp-1 = 
ramp-1-foreground = ${colors.inactive-fg}
ramp-2 = 
ramp-2-foreground = ${colors.fg}

bar-width = 12
bar-indicator = |
bar-indicator-font = 6
bar-indicator-foreground = ${colors.fg}
bar-fill = ─
bar-fill-font = 6
bar-fill-foreground = ${colors.arc-blue}
bar-empty = ─
bar-empty-font = 6
bar-empty-foreground = ${colors.inactive-bg}

[module/volume]
